<UserControl x:Class="pr6.Elements.PinInputControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:pr6.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <PasswordBox x:Name="TbPin1" MaxLength="1" Width="50" Height="50" 
                         FontSize="24" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                         Margin="5" PasswordChanged="Pin_PasswordChanged" KeyDown="Pin_KeyDown" />
            <PasswordBox x:Name="TbPin2" MaxLength="1" Width="50" Height="50" 
                         FontSize="24" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                         Margin="5" PasswordChanged="Pin_PasswordChanged" KeyDown="Pin_KeyDown" />
            <PasswordBox x:Name="TbPin3" MaxLength="1" Width="50" Height="50" 
                         FontSize="24" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                         Margin="5" PasswordChanged="Pin_PasswordChanged" KeyDown="Pin_KeyDown" />
            <PasswordBox x:Name="TbPin4" MaxLength="1" Width="50" Height="50" 
                         FontSize="24" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                         Margin="5" PasswordChanged="Pin_PasswordChanged" KeyDown="Pin_KeyDown" />
        </StackPanel>
    </Grid>
</UserControl>
