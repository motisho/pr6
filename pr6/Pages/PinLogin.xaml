<Page x:Class="pr6.Pages.PinLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pr6.Pages"
      xmlns:elements="clr-namespace:pr6.Elements"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PinLogin">

    <Grid Background="{DynamicResource MaterialDesignPaper}">
        <Grid Height="400" Width="300" VerticalAlignment="Center" HorizontalAlignment="Center">

            <Image x:Name="IUserControl"
                   HorizontalAlignment="Center"
                   Height="100"
                   Width="100"
                   Margin="32"
                   VerticalAlignment="Top"
                   Source="/pr6;component/Images/ic_user.png">
                <Image.Clip>
                    <EllipseGeometry RadiusX="50" RadiusY="50" Center="50,50"/>
                </Image.Clip>
            </Image>

            <Label x:Name="LUserName"
                   Margin="10,137,10,0"
                   VerticalAlignment="Top"
                   HorizontalContentAlignment="Center"
                   FontSize="16"
                   Foreground="Black"/>

            <Label Content="Enter your 4-digit PIN" 
                   Margin="10,161,10,0" 
                   VerticalAlignment="Top"
                   HorizontalContentAlignment="Center"/>

            <StackPanel VerticalAlignment="Center" Margin="0,180,0,0">

                <elements:PinInputControl x:Name="PinControl" 
                                          PinCompleted="PinControl_PinCompleted"
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,20"/>

                <Button x:Name="BtnLogin" 
                        Content="LOGIN" 
                        Click="BtnLogin_Click" 
                        IsEnabled="False" 
                        Width="200"
                        Height="35"
                        HorizontalAlignment="Center"/>

                <Label Content="Back" 
                       Margin="0,20,0,0" 
                       HorizontalAlignment="Center"
                       Foreground="#FF673AB7" 
                       FontSize="12"
                       Cursor="Hand"
                       MouseDown="OpenLogin"/>
            </StackPanel>

        </Grid>
    </Grid>
</Page>